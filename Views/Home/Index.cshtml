                {
                    <button class="btn-cart disabled" onclick="redirectToLogin()">Add to Cart</button>
                }
            </div>
        </div>

        <!-- Product 3 -->
        <div class="col-md-4">
            <div class="info-box">
                <img src="~/Img/Screenshot (39).png" alt="Product 3" class="img-fluid product-img">
                <h4>H&M Puffer Jacket</h4>
                <p>$49.99</p>


                @if (!string.IsNullOrEmpty(token) && role == "Buyer")
                {
                    <form asp-controller="User" asp-action="BuyerUi" method="get">
