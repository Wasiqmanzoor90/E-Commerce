<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Poppins', sans-serif;
    }


    /* Product Section */
    .products-section {
        background: #ffffff;
        padding: 60px 0;
    }

    /* Ensure Cards Have Equal Height */
    .info-box {
        background: white;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        min-height: 380px; /* Equal height for all */
    }

    /* Product Image */
    .product-img {
        max-height: 200px; /* Prevent stretching */
        width: auto;
        object-fit: cover;
        margin-bottom: 15px;
    }

    /* Product Title */
    .info-box h4 {
        font-size: 1.2rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
    }



   
    /* Add to Cart Button */
    .btn-cart {
        background-color: black;
        color: white;
        border-radius: 25px;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: 600;
        border: none;
       
    }

   

  </style>

<div class="container-fluid py-5 promo-container">
    <div class="container">
        <h1>30% Off <span style="color: dimgrey;">Winter Sale</span> Promo Code</h1>
        <p>This summer, our new collection will shelter you from the harsh elements of the world.</p>
        <form method="get" asp-action="BuyerUi" asp-controller="User">
            <button class="btn btn-dark" style="border-radius:15px">Shop Now</button>
        </form>
    </div>
</div>


@{
    var token = Context.Request.Cookies["TestToken"];
    var role = Context.Request.Cookies["Role"];
}
<div class="container-fluid products-section">
    <h2 class="text-center mb-5">Featured Products</h2>
    <div class="row g-4 text-center">

   

        <!-- Product 1 -->
        <div class="col-md-4">
            <div class="info-box">
                <img src="~/Img/Screenshot (40).png" alt="Product 1" class="img-fluid product-img">
                <h4>Levis Men Mid Rise Baggy Fit Relaxed Jeans Baggy</h4>
                <p>$39.99</p>

                @if (!string.IsNullOrEmpty(token) && role == "Buyer")
                {
                    <form asp-controller="User" asp-action="BuyerUi" method="get">
                        <button class="btn-cart">Add to Cart</button>
                    </form>
                }
                else
                {
                    <button class="btn-cart disabled" onclick="redirectToLogin()">Add to Cart</button>
                }
            </div>
        </div>

        <!-- Product 2 -->
        <div class="col-md-4">
