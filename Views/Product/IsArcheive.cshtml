@model IEnumerable<E_Commerce.Models.DomainModel.Product>


<div class="container my-5" style="margin-bottom: 60px; height: 90vh;">
    <h2 class="mb-4">Archived Products</h2>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Product Title</th>
              
                <th>Description</th>
                <th>Category</th>
                <th>SubCategory</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@(product.ProductDescription) </td> 
                    <td>@product.Category</td>
                    <td>@product.SubCategory</td>
                    <td>@product.ProductPrice $</td>
                    <td>
                        <a asp-action="UnArchive" asp-controller="Product" asp-route-id="@product.ProductId" class="btn btn-primary btn-sm">
                            Unarchive
                        </a>
                        <a asp-action="Deleted" asp-controller="Product" asp-route-id="@product.ProductId" class="btn btn-danger btn-sm">
                            Recycle bin
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>