<!DOCTYPE html>
<html lang="en">
<head>
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E_Commerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/E_Commerce.styles.css" asp-append-version="true" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
    <!-- Google Fonts (Same as H&M) -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

    <!-- Font Awesome (For Icons) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>

    <style>
        /* Apply Font */
        body {
            font-family: 'Poppins', sans-serif;
        }

        /* Navbar Styling */
        .navbar {
            background-color: #FAF9F8;
            /* border-bottom: 1px solid #ddd; */
            padding: 10px 15px;
        }

        /* Centered Logo */
        .navbar-brand img {
            width: 80px;
        }

        /* Navbar Links */
        .nav-item .nav-link {
            color: black;
            font-weight: 500;
            font-size: 14px;
            margin: 0 10px;
        }

            /* Hover Effect */
            .nav-item .nav-link:hover {
                text-decoration: underline;
            }

        /* Navbar Right Section */
        .navbar-icons {
            font-size: 16px;
        }

            .navbar-icons a {
                color: black;
                margin-left: 15px;
                text-decoration: none;
            }

    

        
    </style>
</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">

                <!-- Left Section -->
                <ul class="navbar-nav me-auto d-none d-lg-flex">
                    <li class="nav-item"><a class="nav-link" href="#">Sustainability</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Customer Service</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Newsletter</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">...</a></li>
                </ul>

                <!-- Center Logo -->
                <a class="navbar-brand mx-auto" href="#">
                    <img src="https://logos-world.net/wp-content/uploads/2020/04/HM-Logo.png" alt="H&M">
                </a>

                <!-- Right Icons -->
                <div class="navbar-icons ms-auto">

                    @{
                        var token = Context.Request.Cookies["TestToken"]; // Read token from cookies
                    }

                    @if (string.IsNullOrEmpty(token))
                    {
                        <!-- If user is NOT logged in, show Sign In -->
                        <a href="@Url.Action("Login", "User")"><i class="fa-regular fa-user"></i> Sign in</a>
                    }
                    else
                    {
                        <!-- If user is logged in, show Profile Icon -->
                        <a href="@Url.Action("UserProfile", "User")">
                            <i class="fa-solid fa-user-circle"></i> Account
                        </a>
                    }

                    <a href="#"><i class="fa-regular fa-heart"></i> Favourites</a>
                    <a href="@Url.Action("CartUi","Cart")"><i class="fa-solid fa-bag-shopping"></i> Shopping bag</a>
                </div>

            </div>
        </nav>

        <!-- Second Navbar (Categories) -->
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid justify-content-center">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("LadiesUi","User")">Ladies</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("MenUi","User")">Men</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Baby</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Kids</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Sale</a></li>
                </ul>
            </div>
        </nav>

       
    </header>
    <main role="main" class="pb-3" style="background-color:#FAF9F8; padding: 20px 0;">
        <div class="container-fluid px-4">
            @RenderBody()
        </div>
    </main>


    <footer class="footer text-dark py-5" style="background-color: lightgray;">
        <div class="container">
            <div class="row">
                <!-- Shop Section -->
                <div class="col-md-3">
                    <h5>Shop</h5>
                    <ul class="list-unstyled" style="font-size:0.9rem">
                        <li><a href="#" class="text-dark text-decoration-none">Ladies</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">Men</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">Baby</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">Kids</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">Home</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">Magazine</a></li>
                    </ul>
                </div>

                <!-- Corporate Info -->
                <div class="col-md-3">
                    <h5>Corporate Info</h5>
                    <ul class="list-unstyled" style="font-size:0.9rem">
                        <li><a href="#" class="text-dark text-decoration-none">Career at E-Commerce</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">About Us</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">Sustainability</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">Press</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">Investor Relations</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">Corporate Governance</a></li>
                    </ul>
                </div>

                <!-- Help Section -->
                <div class="col-md-3">
                    <h5>Help</h5>
                    <ul class="list-unstyled" style="font-size:0.9rem">
                        <li><a href="#" class="text-dark text-decoration-none">Customer Service</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">My Account</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">Find a Store</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">Legal & Privacy</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">Contact</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">Secure Shopping</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">Cookie Notice</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">Cookie Settings</a></li>
                    </ul>
                </div>

                <!-- Newsletter & Social Media -->
                <div class="col-md-3 text-center">
                    <h5>Stay Updated</h5>
                    <p style="font-size:0.9rem">Sign up now and be the first to know about exclusive offers, latest fashion news & style tips!</p>
                    <a href="#" class="text-dark text-decoration-none" style="font-size:0.9rem">Read more →</a>

                    <div class="mt-3">
                        <a href="#" class="text-dark mx-2"><i class="fab fa-facebook fa-lg"></i></a>
                        <a href="#" class="text-dark mx-2"><i class="fab fa-twitter fa-lg"></i></a>
                        <a href="#" class="text-dark mx-2"><i class="fab fa-instagram fa-lg"></i></a>
                        <a href="#" class="text-dark mx-2"><i class="fab fa-linkedin fa-lg"></i></a>
                    </div>
                </div>
            </div>

            <!-- Copyright & Branding -->
            <div class="text-center mt-4">
                <div style="width: 80px; margin: auto;">
                    <img src="https://logos-world.net/wp-content/uploads/2020/04/HM-Logo.png" alt="H&M" class="img-fluid">
                </div>
                <p class="mt-2">&copy; 2025 - <strong>E-Commerce</strong>. All Rights Reserved.</p>
            </div>

        </div>
    </footer>

<!-- FontAwesome for icons (Include in <head> or before </body>) -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>


</html>


