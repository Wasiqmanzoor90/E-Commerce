@model E_Commerce.Models.DomainModel.User
@using E_Commerce.Types

<div class="Register text-center">
    <div class="Register-content">
        <h3>Sign Up</h3>

        <form i asp-action="Register" asp-controller="User" method="post">


            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" type="text" class="form-control input-border" required />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" type="email" class="form-control input-border" required />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control input-border" required />
            </div>

            <button type="submit" class="btn-black mb-3">Register</button> <br />
          

            <!-- Error Message -->
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
            {
                <div class="alert alert-danger mt-3" role="alert">
                    <p>@ViewBag.ErrorMessage</p>
                </div>
            }

            <!-- Success Message -->
            @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage as string))
            {
                <div class="alert alert-success mt-3" role="alert">
                    <p>@ViewBag.SuccessMessage</p>
                </div>
            }
        </form>
    </div>
</div>

<style>
    .Register {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 50px 0;
    }

    .Register-content {
        background: white;
        padding: 20px;
        border-radius: 8px;
        width: 350px;
        max-height: 500px;
        overflow-y: auto;
        border: 2px solid transparent;
        transition: border 0.3s ease-in-out;
    }

        .Register-content:hover {
            border: 2px solid black;
        }

    .input-border {
        border: 1px solid #ccc;
        transition: border 0.3s ease-in-out;
    }

        .input-border:hover {
            border: 1px solid black;
        }

    .btn-black {
        color: white;
        background-color: black;
        border: none;
        padding: 8px 16px;
        border-radius: 4px;
        cursor: pointer;
        transition: background 0.3s ease-in-out;
        margin:0 
    }

        .btn-black:hover {
            background-color: #333;
        }
</style>
